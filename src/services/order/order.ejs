<!DOCTYPE html>
<html>

<head>
  <style>
   /* CSS for ConfirmationTemplate component */

/* Base styles */

.container {

    width: 600px;

    background-color: #124e58;

    margin-left: auto;

    margin-right: auto;

    padding-left: 16px;

    padding-right: 16px;

    padding-top: 16px;

    margin-top: 20px;

    margin-bottom: 20px;

}



.card {

    background-color: #fff;

    padding: 20px;

    border-radius: 4px;

}



/* Flex styles */

.flex {

    display: flex;

}



.justify-between {

    justify-content: space-between;

}



.items-center {

    align-items: center;

}



.flex-col {

    flex-direction: column;

}



.text-center {

    text-align: center;

}



.flex-wrap {

    flex-wrap: wrap;

}



/* Text styles */

.text-32 {

    font-size: 32px;

}



.font-bold {

    font-weight: bold;

}



.text-primary {

    color: #0d3d4b;

}



.text-slate-600 {

    color: #6b7280;

}



.text-base {

    font-size: 16px;

}



.text-lg {

    font-size: 18px;

}



.text-sm {

    font-size: 14px;

}



.font-semibold {

    font-weight: 600;

}



/* Margin and Padding */

.mb-6 {

    margin-bottom: 24px;

}



.mt-2 {

    margin-top: 8px;

}



.mt-4 {

    margin-top: 16px;

}



.mb-8 {

    margin-bottom: 32px;

}



.mr-2 {

    margin-right: 8px;

}



.mr-4 {

    margin-right: 16px;

}



.mr-5 {

    margin-right: 20px;

}



.mt-45 {

    margin-top: 45px;

}



/* Buttons */

.button {

    display: inline-block;

    padding: 12px 14px;

    border-radius: 50px;

    font-size: 16px;

    font-weight: bold;

    text-align: center;

    cursor: pointer;

}



.bg-yellow {

    background-color: #f2c852;

}



.text-primary {

    color: #0d3d4b;

}



/* Grid styles */

.grid {

    display: grid;

}



.grid-cols-2 {

    grid-template-columns: repeat(2, minmax(0, 1fr));

}



/* Table styles */

.table {

    display: table;

    width: 100%;

    border-collapse: collapse;

    border-spacing: 0;

}



.thead {

    display: table-header-group;

    vertical-align: middle;

    border-color: inherit;

}



.tbody {

    display: table-row-group;

    vertical-align: middle;

    border-color: inherit;

}



.tr {

    display: table-row;

    vertical-align: inherit;

    border-color: inherit;

}



.th {

    display: table-cell;

    padding: 8px;

    text-align: left;

    vertical-align: middle;

    border-bottom-width: 1px;

    border-bottom-style: solid;

    border-bottom-color: #d1d5db;

    font-size: 14px;

    font-weight: 600;

    color: #124e58;

}



.td {

    display: table-cell;

    padding: 8px;

    text-align: left;

    vertical-align: middle;

    font-size: 14px;

    color: #124e58;

    border-bottom-width: 1px;

    border-bottom-style: solid;

    border-bottom-color: #d1d5db;

}



/* Additional styles */

.border {

    border-width: 1px;

    border-style: solid;

}



.space-y-2 > * + * {

    margin-top: 0.5rem;

}



.hidden {

    display: none;

}



.col {

    display: table-cell;

}



/* Width */

.width-347 {

    width: 347px;

}



.width-full {

    width: 100%;

}



/* Padding */

.p-12-14 {

    padding: 12px 14px;

}



.py-4 {

    padding-top: 16px;

    padding-bottom: 16px;

}



/* Height */

.height-full {

    height: 100%;

}



/* Images */

img {

    max-width: 100%;

    height: auto;

}



/* Miscellaneous */

.rounded-50 {

    border-radius: 50px;

}



/* Media Query for bigger devices */

@media (min-width: 768px) {

    .hidden-md-block {

        display: block;

    }

}
  </style>
</head>

<body>
  <div class='container'>
    <div class='card'>
      <div class='flex justify-between items-center'>
        <!-- Your logo image here -->
        <!-- <img src="your-logo-image-url" alt='' /> -->
        <% const date=new Date(order.date); %>
          <% const formattedDate=date.toLocaleDateString('en-US', { month: 'long' , day: 'numeric' , year: 'numeric' });
            %>
            <p>
              <%= formattedDate %>
            </p>
      </div>

      <div class='flex items-center justify-center flex-col text-center mt-45 mb-8'>
        <!-- Your confirmation logo image here -->
        <!-- <img src="your-confirmation-logo-image-url" alt='' class='mb-6' /> -->
        <p class='text-32 font-bold text-primary'>
          Your order is on its way
        </p>
        <p class='text-slate-600 text-base font-normal mt-2'>
          Please allow 24 hours to track your order
        </p>
        <a href="<%= homeLink %>">
          <button class='bg-yellow text-primary p-12-14 mt-4 mb-8 rounded-50 font-semibold'>
            Track your order
          </button>
        </a>
      </div>

      <div class='grid grid-cols-2 font-semibold text-slate-600 text-sm'>
        <div class='border p-3 space-y-2'>
          <p class='text-lg text-primary mb-5'>Summary:</p>
          <p>
            <span>Order:</span> <span class='ms-2'>#<%= order.id %></span>
          </p>
          <p>
            <span>Order Date:</span>
            <span class='ms-2'>
              <%= formattedDate %>
            </span>
          </p>
          <p>
            <span>Order Total:</span>
            <span class='ms-2'>$<%= order.total %> </span>
          </p>
        </div>
        <div class='border p-3 space-y-2'>
          <p class='text-lg text-primary mb-5 font-semibold'>Shipping Address</p>
          <p>
            <%= order.shippingaddress.area %>, <%= order.shippingaddress.city %>, <%= order.shippingaddress.address %>,
                  <%= order.shippingaddress.zip %>
          </p>
        </div>
      </div>

      <div>
        <table class='table'>
          <thead class='thead'>
            <tr>
              <th class='th'>Product List</th>
              <th class='th'>Qty</th>
              <th class='th'>Price</th>
            </tr>
          </thead>
          <tbody class='tbody'>
            <% let totalTax=0; %>
              <% let totalFee=0; %>
                <% let totalPrice=0; %>
                  <% if (order.requests) { %>
                    <% order.products.forEach((product)=> { %>
                      <tr class='tr' key='<%= product.product.id %>'>
                        <td class='td'>
                          <div class='flex items-center gap-1'>
                            <img src='<%= serverLink + product.product.images[0] %>' alt='' class='w-16 h-16' />
                            <p class='text-base font-normal block' style='color: black;'>
                              <%= product.product.name %>
                            </p>
                          </div>
                        </td>
                        <td class='td' style='color: black;'>
                          <div class='flex items-center gap-5'>
                            <%= product.productQuantity %>
                          </div>
                        </td>
                        <td class='td'>
                          <div class='flex items-center gap-5'>
                            <span>
                              <%= product.product.price %>
                            </span>
                          </div>
                        </td>
                      </tr>
                      <% totalTax +=product.product.tax; %>
                        <% totalFee +=product.product.fee; %>
                          <% totalPrice +=product.product.price * product.productQuantity; %>
                            <% }); %>
                              <% } %>
                                <% if (order.requests) { %>
                                  <% order.requests.forEach((request)=> { %>
                                    <tr class='tr' key='<%= request.request.id %>'>
                                      <td class='td'>
                                        <div class='flex items-center gap-1'>
                                          <img src='<%= serverLink + request.request.images[0] %>' alt=''
                                            class='w-16 h-16' />
                                          <p class='text-base font-normal block' style='color: black;'>
                                            <%= request.request.name %>
                                          </p>
                                        </div>
                                      </td>
                                      <td class='td' style='color: black;'>
                                        <div class='flex items-center gap-5'>
                                          <%= request.requestQuantity %>
                                        </div>
                                      </td>
                                      <td class='td'>
                                        <div class='flex items-center gap-5'>
                                          <span>
                                            <%= request.request.price %>
                                          </span>
                                        </div>
                                      </td>
                                    </tr>
                                    <% totalTax +=request.request.tax; %>
                                      <% totalFee +=request.request.fee; %>
                                        <% totalPrice +=request.request.price * request.requestQuantity; %>
                                          <% }); %>
                                            <% } %>
          </tbody>
        </table>
      </div>

      <div class='width-347 ms-auto'>
        <div class='border-b text-base text-slate-600'>
          <div class='flex justify-between items-center py-4'>
            <span class='text-start'>Seller Takes</span>
            <span class='text-end'>৳ <%= totalPrice %> k</span>
          </div>
          <div class='flex justify-between items-center py-4'>
            <span class='text-start'>US sales tax</span>
            <span class='text-end'>৳ <%= totalTax %> k</span>
          </div>
          <div class='flex justify-between items-center py-4'>
            <span class='text-start'>Packers Fee</span>
            <span class='text-end'>৳ <%= totalFee %> k</span>
          </div>
          <div class='flex justify-between items-center py-4'>
            <span class='text-start'>Delivery Charge</span>
            <span class='text-end'>৳ <%= order.insideDhaka ? '99' : '150' %> k</span>
          </div>
        </div>
        <div class='flex justify-between items-center py-4'>
          <span class='text-start'>Estimated total</span>
          <span class='text-end text-lg font-bold'>
            ৳ <%= order.total %> tk
          </span>
        </div>
      </div>
      <a href='<%= homeLink %>'>
        <button class='bg-yellow text-primary p-12-14 rounded-50 w-full text-sm font-bold'>
          Keep Shopping with us
        </button>
      </a>
    </div>
    <div class='flex items-center justify-center py-5'>
      <!-- Your second logo image here -->
      <!-- <img src="your-second-logo-image-url" alt='' /> -->
    </div>
  </div>
</body>

</html>